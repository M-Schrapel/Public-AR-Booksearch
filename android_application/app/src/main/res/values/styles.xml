<resources>

    <!-- Base application theme. -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="item_text_title">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/item_text_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_text_subtitle">
        <item name="android:textColor">#757575</item>
        <item name="android:textSize">@dimen/item_text_subtitle</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="book_view_text_header">
        <item name="android:textColor">#757575</item>
        <item name="android:textSize">@dimen/book_view_text_size_header</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="book_view_text_content">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/book_view_text_size_content</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="book_view_text_subtitle">
        <item name="android:textColor">#757575</item>
        <item name="android:textSize">@dimen/book_view_text_size_subcontent</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
